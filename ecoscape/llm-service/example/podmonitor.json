{
   "apiVersion": "monitoring.coreos.com/v1",
   "kind": "PodMonitor",
   "metadata": {
      "labels": {
         "release": "prometheus"
      },
      "name": "llm-services-monitor",
      "namespace": "scalablemine-stu208763-monitor"
   },
   "spec": {
      "namespaceSelector": {
         "matchNames": [
            "scalablemine-stu208763"
         ]
      },
      "podMetricsEndpoints": [
         {
            "path": "/metrics",
            "port": "metrics",
            "interval": "30s"
         }
      ],
      "selector": {
         "matchExpressions": [
            {
               "key": "app",
               "operator": "In",
               "values": ["cloud-zone1", "edge-zone1"]
            }
         ]
      }
   }
}